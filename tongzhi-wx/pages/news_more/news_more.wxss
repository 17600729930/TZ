.wrap{
  width: 100%;
  border-top: 1px solid #d9d9d9;
  background: #f5f7fb;
}
.wrap .news_wrap{
  width: 97%;
  margin: 20rpx auto;
}
.wrap .news_wrap .time{
  width: 20%;
  margin: 20rpx auto 20rpx;
  background: #dfe0e5;
  color: #fff;
  text-align: center;
  font-size: 30rpx;
}
.wrap .news_wrap .news_con{
  width: 95%;
  padding: 20rpx;
  margin: 0 auto;
  background: #fff;
}
.wrap .news_wrap .news_con .replay{
  background:rgb(201, 61, 61);
  color:#fff;
  text-align: center;
  padding: 16rpx 0;
  font-size:28rpx;
  border-radius: 3px;
}
.wrap .news_wrap .news_con .news_top{
  width: 100%;
  display: flex;
  padding-bottom: 10rpx;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #f2f2f2;
}
.wrap .news_wrap .news_con .news_top image{
  width: 60rpx;
}
.wrap .news_wrap .news_con .news_top text{
  font-size: 32rpx;
  margin-left: 20rpx;
}
.wrap .news_wrap .news_con .news_middle{
  padding: 20rpx 0;
}
.wrap .news_wrap .news_con .news_middle text{
  font-size: 30rpx;
}
