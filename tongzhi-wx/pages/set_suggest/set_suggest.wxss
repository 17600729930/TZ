.set{
  width: 100%;
}
.set .set_wrap{
  padding: 20rpx;
  background: #f6f7fa;
}
.set .set_wrap form{
  display: block;
  width: 100%;
}
.set .set_wrap form label{
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  margin:10rpx 0;
  box-sizing: border-box;
  padding: 20rpx;
}
.set .set_wrap form label textarea{
  width: 100%;
  height: 300rpx;
  font-size: 30rpx;
}
.set .set_wrap form label text{
  font-size: 30rpx;
  padding-left: 20rpx;
}
.set .set_wrap form label input{}
.set .set_wrap form .tip{
  padding: 20rpx 0;
  font-size: 30rpx;
}
.set .set_wrap form label .wx-radio-wrapper{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-direction: row-reverse;
}
.set .set_wrap form label radio{
  width: 100%;
}
.set .set_wrap form label .wx-radio-input{
  border-radius: 0;
  border: 0;
}