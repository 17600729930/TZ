/* 底部 */
.footer{
  border-top: 1px solid #dbcdb9;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding-top: 10rpx;
  background-color: #fff;
  overflow: hidden;
}
.footer .item{
  float: left;
  width: 20%;
}
.footer .item .pic{
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  margin: 0 auto;
}
.footer .item .pic image{
  display: block;
  width: 100%;
  height: 100%;
}
.footer .item .tit{
  text-align: center;
  display: block;
  width: 100%;
  font-size: 24rpx;
  color: #d9c5a8;
}
.footer .item.on .tit{
  color: #ff6805;
}
/* 头部 */
.header{
  overflow: hidden;
  height: 120rpx;
  background-color: #fff;
}
.header .tit{
  line-height: 120rpx;
  color: #363636;
  font-size: 47rpx;
  padding-left: 30rpx;
  overflow: hidden;
  letter-spacing: 5rpx;
}
.header .link{
  float: right;
  overflow: hidden;
  margin-right: 10rpx;
}
.header .link navigator{
  display: block;
  float: left;
  width: 80rpx;
  height: 120rpx;
}
.header .link navigator image{
  display: block;
  width:35rpx;
  height:35rpx;
  margin: 40rpx auto 0;
}
.color{
  display: block;
  width: 100%;
  height: 3px;
}