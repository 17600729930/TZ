.video_wrap{
  width: 100%;
  box-sizing: border-box;
  padding: 0 8rpx;
}
.video_wrap .video_box{
  width: 100%;
}
.video_wrap .video_box video{
  width: 100%;
  max-height: 410rpx;
}
.video_info{
  width: 100%;
  padding-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid #f5f6fb;
}
.video_info .left{
  width: 70%;
  display: flex;
  align-items: center;
}
.video_info .left .face{
  width:110rpx;
  height: 110rpx;
  border-radius: 100%;
}
.video_info .left .face image{
  width: 100%;
  height: 100%;
}
.video_info .left .info{
  margin-left: 30rpx;
}
.video_info .left .info .name{
  font-size: 30rpx;
  color: #333;
}
.video_info .left .info .name_fa{
  font-size: 28rpx;
  color: #a7a7a7;
  margin-top: 10rpx;
}
.video_info .right{
  width: 30%;
  text-align: right;
}
.video_info .right text{
  color: #a7a7a7;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.video_info .right navigator{
  display: inline-block;
  color: #a7a7a7;
}
.video_like{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 40rpx 0;
  border-bottom: 2px splid #f5f6fb;
  border-top: 2px splid #f5f6fb;
}
.video_like .like_wrap{
  display: flex;
  align-items: center;
  margin: 0 20rpx;
}
.video_like .like_wrap image{
  width: 47rpx;
  height: 40rpx;
}
.video_like .like_wrap text{
  color: #434343;
  font-size: 28rpx;
  margin-left: 20rpx;
}
.video_talk{
  width: 100%;
  border-bottom: 2px solid #f5f6fb;
}
.video_talk .talk_top{
  width: 100%;
  padding: 15rpx 0;
  font-size: 30rpx;
}
.video_talk .video_w{
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center;
}
.video_talk .video_w .video_box{
  width: 49%;
  border-radius: 5px;
  border:1px solid #f3f3f3;
  margin-bottom: 20rpx;
}
.video_talk .video_w .video_box video{
  width:100%;
  max-height: 310rpx;
}
.video_talk .video_w .video_box .title{
  font-size: 30rpx;
  color: #000;
}
.video_talk .video_w .video_box .view{
  font-size:24rpx;
  margin: 10rpx 0;
  color:#555;
}