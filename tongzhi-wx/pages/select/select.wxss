/* 头部 */
.header{
  overflow: hidden;
  height: 120rpx;
  background-color: #fff;
}
.header .tit{
  line-height: 120rpx;
  color: #363636;
  font-size: 47rpx;
  padding-left: 30rpx;
  overflow: hidden;
  letter-spacing: 5rpx;
}
.select{
  width: 100%;
}
.select .wrap{
  width: 98%;
  margin: 0 auto;
  box-sizing: border-box;
}
.select .wrap form{
  width: 100%;
}
.select .wrap form .top{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.select .wrap form .top image{
  width: 50rpx;
}
.select .wrap form .top input{
  width: 85%;
  padding-left: 20rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #f2f2f2;
}
.select .wrap form .sex{
  width: 100%;
  padding-left: 18rpx;
  box-sizing: border-box;
  margin-top: 18rpx;
}
.select .wrap form .tit{
  font-size: 34rpx;
  color: #000;
}
.select .wrap form .sex radio-group{
  width: 100%;
  margin-top: 20rpx;
}
.select .wrap form .sex radio-group radio.active{
  background: #ff6906;
  color: #fff;
}
.select .wrap form .sex radio-group radio{
  background: #e5dccf;
  color: #b7b1a8;
  padding: 6rpx 40rpx;
  font-size: 30rpx;
  margin-right: 10rpx;
  border-radius: 20px;
}
.select .wrap form .sex radio-group radio .wx-radio-input{
  display: none;
}
.select .wrap form .work{
  width: 100%;
  padding-left: 18rpx;
  box-sizing: border-box;
  margin-top: 18rpx;
}
.select .wrap form .work checkbox-group{
  width:100%;
  margin-top:20rpx;
}
.select .wrap form .work checkbox-group checkbox{
  background: #e5dccf;
  color: #b7b1a8;
  padding: 6rpx 40rpx;
  font-size: 30rpx;
  margin: 10rpx 10rpx 0 0;
  border-radius: 20px;
}
.select .wrap form .work checkbox-group checkbox.active{
  background: #ff6906;
  color: #fff;
}
.select .wrap form .work checkbox-group checkbox .wx-checkbox-input{
  display: none;
}
.select .wrap form .hob{
  width: 100%;
  padding-left: 18rpx;
  box-sizing: border-box;
  margin-top: 18rpx;
}
.select .wrap form .hob checkbox-group{
  width:100%;
  margin-top:20rpx;
}
.select .wrap form .hob checkbox-group checkbox{
  background: #e5dccf;
  color: #b7b1a8;
  padding: 6rpx 40rpx;
  font-size: 30rpx;
  margin: 10rpx 10rpx 0 0;
  border-radius: 20px;
}
.select .wrap form .hob checkbox-group checkbox.active{
  background: #ff6906;
  color: #fff;
}
.select .wrap form .hob checkbox-group checkbox .wx-checkbox-input{
  display: none;
}
.select .wrap form .age{
  width: 100%;
  display: block;
  padding-left: 18rpx;
  box-sizing: border-box;
  margin-top: 18rpx;
}
.select .wrap form .age input{
  border: 1px solid #cfc8bd;
  border-radius: 28px;
  margin-top: 20rpx;
  padding:4px 20px;
  font-size: 28rpx;
}
.select .wrap form .area{
  width: 100%;
  display: block;
  padding-left: 18rpx;
  box-sizing: border-box;
  margin-top: 18rpx;
}
.select .wrap form .area .picker{
  border: 1px solid #cfc8bd;
  border-radius: 28px;
  margin-top: 20rpx;
  padding:4px 20px;
  font-size: 28rpx;
  height:1.4rem;
  line-height: 1.4rem;
  color: #676767;
}
.select .wrap form .button{
  width: 90%;
  margin: 0 auto;
  padding: 0 18rpx;
}
.select .wrap form .button button{
  width: 90%;
}