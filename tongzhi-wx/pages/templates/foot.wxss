/* 底部 */
.footer{
  border-top: 1px solid #dbcdb9;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding-top: 10rpx;
  background-color: #fff;
  overflow: hidden;
  margin-top: 100rpx;
}
.footer .item{
  float: left;
  width: 20%;
  position: relative !important;

}
.footer .item .pic{
  width: 60rpx;
  height: 60rpx;
  overflow: hidden;
  margin: 0 auto;
}
.footer .item .pic image{
  display: block;
  width: 100%;
  height: 100%;
}
.footer .item .tit{
  text-align: center;
  display: block;
  width: 100%;
  font-size: 24rpx;
  color: #d9c5a8;
}
.footer .item .num{
  position: absolute;
  top: 0;
  right: 0;
  background: red;
  color: #fff;
  border-radius: 50%;
}
.footer .item.on .tit{
  color: #ff6805;
}